{
    "name": "FSDiffReg",
    "phase": "train",
    "gpu_ids": [
        0
    ],
    "path": {
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "centered": true,
        "train": {
            "name": "3D",
            "dataroot": "/home/yqinar/regisdata",
            "batch_size": 1,
            "num_workers": 8,
            "use_shuffle": true
        }
    },
    "model": {
        "netDim": 3,
        "which_model_G": "ddpm",
        "finetune_norm": false,
        "unet": {
            "in_channel": 3,
            "out_channel": 1,
            "inner_channel": 8,
            "channel_multiplier": [
                1,
                2,
                4,
                4
            ],
            "attn_res": [
                10
            ],
            "res_blocks": 1,
            "dropout": 0
        },
        "beta_schedule": {
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": [128,128,32],
            "conditional": true
        },
        "field": {
            "in_channel": 2,
            "encoder_nc": [16,32,32,32,32],
            "decoder_nc": [32,32,32,8,8,3]
        },
        "loss_lambda": 20,
        "gamma": 1
    },
    "train": {
        "n_epoch": 700,
        "val_freq": 85,
        "save_checkpoint_epoch": 5,
        "print_freq": 1,
        "optimizer": {
            "type": "adam",
            "lr": 2e-4
        }
    }
}